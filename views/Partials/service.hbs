<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
</head>
<body>
    {{!-- Service Section --}}
    <section id="service_section" class="py-4">
        <div class="container">
            <h1 class="text-center text-secondary">Services That We Provide</h1>
        <div class="row" mt-2>
            {{!-- // First Coloumn Services --}}
            {{#each services}}
            <div class="col-md-4 servi">
                <div class="card servi">
                    <div class="card-body">
                        <div class="container text-center py-3"><i class="{{this.icon}} service_icon text-secondary" ></i></div>
                        <h3 class="card-title"> {{this.serviceTitle}} </h3>
                        <p>{{this.serviceSubtitle}}
                        </p>
                        <a href="{{this.checkUrl}}">Check</a>
                        <a href="{{this.supportUrl}}" class="ml-3 ">Support</a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
        </div>
    </section>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
</body>
</html>